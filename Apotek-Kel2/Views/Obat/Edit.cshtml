@model Apotek_Kel2.Models.Obat

@{
    ViewData["Title"] = "Edit";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Edit Obat</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-controller="Obat" asp-action="Edit">
                            <input type="hidden" asp-for="id" />
                            <div class="form-group">
                                <label asp-for="id" class="control-label">ID Obat</label>
                                <input asp-for="id" class="form-control" name="id" readonly />
                                <span asp-validation-for="id" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="namaObat" class="control-label">Nama Obat</label>
                                <input asp-for="namaObat" class="form-control" name="namaObat" />
                                <span asp-validation-for="namaObat" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="id_jenis" class="control-label">Jenis Obat</label>
                                <input asp-for="id_jenis" class="form-control" name="id_jenis" />
                                <span asp-validation-for="id_jenis" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="hargaObat" class="control-label">Harga Obat</label>
                                <input asp-for="hargaObat" class="form-control" name="hargaObat" />
                                <span asp-validation-for="namaObat" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="stokObat" class="control-label">Stok Obat</label>
                                <input asp-for="stokObat" class="form-control" name="stokObat" />
                                <span asp-validation-for="stokObat" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="expObat" class="control-label">Tanggal Kadaluarsa Obat</label>
                                <input asp-for="expObat" class="form-control" name="expObat" />
                                <span asp-validation-for="expObat" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Simpan</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>