@model Apotek_Kel2.Models.Obat



@{
    ViewData["Title"] = "Create";
}

<!-- Referensi ke jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Referensi ke Bootstrap CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<!-- Referensi ke Bootstrap Datepicker CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">

<!-- Referensi ke Bootstrap Select CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.14.0/css/bootstrap-select.min.css">

<!-- Referensi ke Bootstrap JS -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<!-- Referensi ke Bootstrap Datepicker JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>

<!-- Referensi ke Bootstrap Select JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.14.0/js/bootstrap-select.min.js"></script>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Tambah Obat</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-controller="Obat" asp-action="Create">
                            <div class="form-group">
                                <label asp-for="id" class="control-label">ID Obat</label>
                                <input asp-for="id" class="form-control" name="id" readonly />
                            </div>
                            <div class="form-group">
                                <label asp-for="namaObat" class="control-label">Nama Obat</label>
                                <input asp-for="namaObat" class="form-control" name="namaObat" />
                                <span asp-validation-for="namaObat" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="id_jenis" class="control-label">Jenis Obat</label>
                                <input asp-for="id_jenis" class="form-control" name="namaObat" />
                                <span asp-validation-for="id_jenis" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="hargaObat" class="control-label">Harga Obat</label>
                                <input asp-for="hargaObat" class="form-control" name="hargaObat" />
                                <span asp-validation-for="hargaObat" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="stokObat" class="control-label">Stok Obat</label>
                                <input asp-for="stokObat" class="form-control" name="stokObat" value="" />
                                <span asp-validation-for="stokObat" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="expObat" class="control-label">Tanggal Kadaluarsa Obat</label>
                                <input asp-for="expObat" class="form-control datepicker" name="expObat" readonly />
                                <span asp-validation-for="expObat" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Simpan</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        // Inisialisasi datepicker
        $('.datepicker').datepicker({
            format: 'yyyy-mm-dd',
            autoclose: true
        });

        // Inisialisasi selectpicker
        $('.selectpicker').selectpicker();
    });
</script>

